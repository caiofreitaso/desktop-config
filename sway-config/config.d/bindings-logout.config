set $exit "Exit: Loc[k], [L]ogout, [R]eboot, Shut[d]own"

mode $exit {
    bindsym k exec --no-startup-id swaylock
    bindsym l exec --no-startup-id swaymsg exit
    bindsym r exec systemctl reboot
    bindsym d exec systemctl shutdown

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $internal+Pause mode $exit
